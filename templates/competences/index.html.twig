{% extends 'base.html.twig' %}

{% block title %}Competences index{% endblock %}

{% block body %}
    <h1>Competences index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competence in competences %}
            <tr>
                <td>{{ competence.nom }}</td>
                <td>
                    <a href="{{ path('app_competences_show', {'idComp': competence.idComp}) }}">show</a>
                    <a href="{{ path('app_competences_edit', {'idComp': competence.idComp}) }}"><i class="fa-solid fa-user-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_competences_new') }}">Submit</a>
{% endblock %}
