{% extends 'backbase.html.twig' %}
{% block body %}



 <section class="section" style="margin-left:400px; margin-right:50px ; margin-top:150px">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Datatable Poste</h5>

              <!-- Table with stripped rows -->
              <table class="table datatable" >
                <thead>
                  <tr>
                    <th scope="col">#id</th>
                    <th scope="col">experience</th>
                    <th scope="col">Description</th>
                    <th scope="col">actions</th>
                    
                  </tr>
                </thead>
                <tbody>
                 {% for poste in postes %}
                  <tr>
                    
                    <td>{{ poste.idPoste }}</td>
                    <td>{{ poste.experience }}</td>
                    <td>{{ poste.description }}</td>
                        <td>
                <form action="{{ path('back_poste_delete', {'idPoste': poste.idPoste}) }}" method="POST" onsubmit="return confirm('Are you sure you want to delete this Poste?')">
                    <input type="hidden" name="_method" value="DELETE" />
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ poste.idPoste) }}" />
                    <button type="submit" class="btn btn-primary">Delete</button>
                </form>
            </td>
                  
                  </tr>
                   {% else %}
                  <tr>
                <td colspan="8">no records found</td>
                  </tr>
                   {% endfor %}
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>
    {% endblock %}